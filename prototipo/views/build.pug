doctype html
html
  head
    link(rel='stylesheet', href='css/graph-creator.css')
    link(rel='stylesheet', href='css/tesis.css')
    title= title
  body
    nav#menu
      ul#lateralMenu
        li
          h2= proyecto
        li#useDocker
        li#id
        li#nombre
        li#comando
        li#workingdir
        li#ntimes
        li Archivos entrada
        li#arent
        li Archivos salida
        li#arsal
        li
          h5#log Log_nodo
        li
          h5#err Err_nodo
        li
          h5#out Out_nodo
      ul#opciones
      ul#mopciones
        button.nada(data-toggle='modal', data-target='.bs-example-modal-lg') check files
    #back
      li
        a(href="/builds?id="+proyecto) < Ir atras

    // Modal
    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Modal title
          .modal-body
            p.infoo#infoo(align="left",text-align="left")
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            a#seeall.btn.btn-primary(href='/', target="_blank") See all


    #filem.modal.bs-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='myLargeModalLabel', aria-hidden='true')
      .modal-dialog.modal-lg
        .modal-content
          .modal-content
            .modal-header
                div
                  // Nav tabs
                  ul.nav.nav-tabs(role='tablist')
                    li.active(role='presentation')
                      a(href='#home2', aria-controls='home2', role='tab', data-toggle='tab') Seleccionar
                    li(role='presentation')
                      a(href='#profile2', aria-controls='profile2', role='tab', data-toggle='tab') Indicar
                    li(role='presentation')
            .modal-body
                div
                  .tab-content
                    #home2.tab-pane.active(role='tabpanel')
                        div(ng-app='FileManagerApp')
                            angular-filemanager
                    #profile2.tab-pane(role='tabpanel')
                        .container
                            .form-group
                                label(for='inputFile') Archivo generado
                                input#inputFile.form-control(type='text', placeholder='Nombre archivo')

            .modal-footer
                button.btn(data-dismiss='modal', aria-hidden='true') Cancelar
                button#filemB.btn.btn-primary Seleccionar



    script(src='vendor/d3.v3.js', charset='utf-8')
    script(src='vendor/FileSaver.min.js')
    script(src='vendor/jquery/jquery-1.11.3.min.js')
    script(type='text/javascript').
      proyecto= "#{proyecto}";
      ejecucion= "#{title}";
      nodes= !{nodes};
      edgesTpm= !{edges};
      workloader = "";
      edges = [];

      function buscar(id){
        for(var i=0; i<nodes.length; i++){
            if(nodes[i].id== id){
                return i;
            }
        }
        return -1;
      }
      if (edgesTpm){
          for(var j = 0 ; j< edgesTpm.length; j++){
            edges.push({source : nodes[buscar(edgesTpm[j].source.id)], target : nodes[buscar(edgesTpm[j].target.id)]});
          }
      }
    script(src='js/khanalg.js')
    script(src='js/graph-creator.js')
    script(src='js/r.js')

